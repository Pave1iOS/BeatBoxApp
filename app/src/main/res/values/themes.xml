<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BeatBoxApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="BeatBoxButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/sound_button_style</item>
    </style>

    <style name="SmallBeatBoxButton" parent="BeatBoxButton">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.BeatBoxApp" parent="Base.Theme.BeatBoxApp" />
</resources>