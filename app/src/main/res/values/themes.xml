<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BeatBoxApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="buttonStyle">@style/BeatBoxButton</item>
    </style>

    <style name="BeatBoxButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/beat_box_button</item>
    </style>

    <style name="SmallBeatBoxButton" parent="BeatBoxButton">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.BeatBoxApp" parent="Base.Theme.BeatBoxApp" />
</resources>